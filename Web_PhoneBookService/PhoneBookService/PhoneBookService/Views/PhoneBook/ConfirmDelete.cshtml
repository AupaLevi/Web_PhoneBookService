@{
    ViewBag.Title = "ConfirmDelete";
}

@model IEnumerable<PhoneBookService.Models.RecordDataObject>

<style>
    #left {
        float: left;
    }

    #right {
        margin-left: 400px;
    }

    #button {
        position: absolute;
        left: 0px;
        bottom: -70px;
    }
</style>

<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
        </div>

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">

            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Confirm Delete Post</h4>
                @foreach (var eachPostData in ViewBag.ListOfRecord as List<PhoneBookService.Models.RecordDataObject>)
                {
                    using (Html.BeginForm("ConfirmedDelete", "PhoneBook", new { postID = eachPostData.Zza01 }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3" id="left">
                            <label for="Zza01">工號</label>
                            <input type="text" class="form-control" placeholder="@eachPostData.Zza01" />
                        </div>
                        <div class="mb-3" id="right">
                            <label for="Zza02">FirstName</label>
                            <input class="form-control" placeholder="@eachPostData.Zza02">
                        </div>
                        <div class="mb-3" id="left">
                            <label for="Zza03">LastName</label>
                            <input class="form-control" placeholder="@eachPostData.Zza03">
                        </div>
                        <div class="mb-3" id="right">
                            <label for="Zza04">姓名</label>
                            <input class="form-control" placeholder="@eachPostData.Zza04">
                        </div>
                        <div class="mb-3" id="left">
                            <label for="Zza05">EMail</label>
                            <input class="form-control" placeholder="@eachPostData.Zza06">
                        </div>
                        <div class="mb-3" id="right">
                            <label for="Zza06">成本中心</label>
                            <input class="form-control" placeholder="@eachPostData.Zza06">
                        </div>
                        <div class="mb-3" id="left">
                            <label for="Zza07">分機</label>
                            <input class="form-control" placeholder="@eachPostData.Zza07">
                        </div>
                        <div class="mb-3" id="right">
                            <label for="Zza08">職稱</label>
                            <input class="form-control" placeholder="@eachPostData.Zza07">
                        </div>

                        <div class="mb-3" id="left">
                            <label for="Zza09">角色</label>
                            <input class="form-control" placeholder="@eachPostData.Zza07">
                        </div>
                        <br />
                        <br />
                        <br />
                        <br />
                        <div class="mb-3" id="<button></button>">
                            <input type="submit" class="btn btn-primary" value="Delete" onclick="@("window.location.href='" + @Url.Action("DeleteConfirmed", "PhoneBook",new { postID=eachPostData.Zza01}) + "'");" />
                            <button type="button" class="btn btn-primary" onclick="history.go(-1)">Cancel</button>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</body>
