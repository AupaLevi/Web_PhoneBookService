@{
    ViewBag.Title = "Home Page";
}
@model AupaWeb.Models.IndexModel

@Styles.Render("~/Content/Site.css")
    <main role="main" class="container">
        <br />
        <br />
        <div class="row">
            <div class="col-md-8 blog-main">

                <h3 class="pb-3 mb-4  border-bottom">
                    歐帕快訊
                </h3>
                <div class="card gedf-card">
                    <div class="card-header">
                        <h4>Latest News</h4>
                    </div>
                    <div class="card-body">
                        <ul class="timeline">
                            @foreach (var eachPostData in Model.PostDataObjects)
                            {
                                <li>
                                    <a href="#">@eachPostData.Aaa06</a>
                                    <a href="#" class="float-right">@eachPostData.Aaa04</a>
                                    <p>@Html.Raw(@eachPostData.Aaa07.Replace("\n", "<br />"))</p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <aside class="col-md-4 blog-sidebar">
                <div class="p-3 mb-3 bg-light rounded">
                    <h4 class="">公告事項</h4>
                    <p class="mb-0"> <em></em> </p>
                </div>

                <div class="p-3">
                    <h4 class="">其他連結</h4>
                    <ul>
                        <li class="nav-item active">
                            <a class="nav-link " href="https://www.anxo.com.tw" target="_blank">瑩碩生技醫藥股份有限公司</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link " href="https://www.aupa.com.tw" target="_blank">歐帕生技醫藥股份有限公司</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link " href="https://www.taxo.com.tw" target="_blank">泰和碩藥品科技股份有限公司</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link " href="https://www.fda.gov.tw/TC/index.aspx" target="_blank">衛生福利部食品藥品管理署</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link " href="/PhoneBook/PhoneBookSearch">歐帕分機查詢</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link " href="https://mail.aupa.com.tw/interface/root#/login" target="_blank">AUPA Web Mail</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link " href="/Post/AddNewPost">公告新增</a>
                        </li>


                    </ul>
                </div>

                <div class="p-3 ">
                    <h4 class="font-italic">Archives</h4>
                    <ol class="list-unstyled mb-0">
                    </ol>
                </div>

                <section class="slide-wrapper">
                    <div id="carouselContent" class="carousel slide vertical " data-ride="carousel" data-interval="1700">
                        <div class="carousel-inner" role="listbox">
                            @foreach (var eachCarouselData in Model.CarouselDataObjects)
                            {
                                if (eachCarouselData.Active)
                                {
                                    <div class="carousel-item active text-center p-4">
                                        <p><a href="@eachCarouselData.Aaz03" target="_blank">@eachCarouselData.Aaz02</a></p>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item text-center p-4">
                                        <p><a href="@eachCarouselData.Aaz03" target="_blank">@eachCarouselData.Aaz02</a></p>
                                    </div>
                                }
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselContent" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselContent" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </section>

            </aside><!-- /.blog-sidebar -->
            <aside class="col-sm-1 blog-sidebar">
                
                </aside>
        </div>
    </main>