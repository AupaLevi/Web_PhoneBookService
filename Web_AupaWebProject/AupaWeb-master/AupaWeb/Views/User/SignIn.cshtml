
@{
    ViewBag.Title = "Signin";
}

@model AupaWeb.Models.UserBasicObject

    <body class="text-center">

        @using (Html.BeginForm("Sign_In", "User", FormMethod.Post))
        {
            <img class="mb-4" src="~/Content/image/aupalogo.jpg" alt="" width="100" height="100">
            <h1 class="h3 mb-3 font-weight-normal">請登入</h1>
            <label for="inputEmail" class="sr-only">User Name</label>
            @Html.TextBoxFor(model => model.Aba01, new { @class = "form-control" })
            <label for="inputPassword" class="sr-only">Password</label>
            @Html.TextBoxFor(model => model.Aba03, new { @class = "form-control",type="password" })
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> 記住我
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">登入</button>
            <button type="button" class="btn btn-lg btn-primary btn-block" onclick="history.go(-1)">取消</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
        }
    </body>

